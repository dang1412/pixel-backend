{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "removeComments": true,
    "target": "es5",
    "module": "ESNext",
    "strict": false,
    "lib": ["es2015"],
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}